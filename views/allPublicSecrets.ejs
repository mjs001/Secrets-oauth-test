<%- include('partials/header') %>
<div class="jumbotron text-center">
  <div class="container">
    <i class="fas fa-key fa-6x"></i>
    <h1 class="display-3">All anonymous secrets:</h1>
    <ul>
      <% if (locals.allSecrets) { %>
      <%allSecrets.forEach((user) => { %>
      <% user.secret.forEach((secret) => { %>
      <li class="secret-text"><%= secret %></li>
      <% }) %>
      <% }) %>
      <% } %>
    </ul>
    <hr>

    <a class="btn btn-light btn-lg" href="/submit" role="button">Submit a new secret</a>
    <a class="btn btn-light btn-lg" href="/secrets" role="button">All Private Secrets</a>
    <a class="btn btn-light btn-lg" href="/logout" role="button">Log Out</a>
  </div>
</div>

<%- include('partials/footer') %>